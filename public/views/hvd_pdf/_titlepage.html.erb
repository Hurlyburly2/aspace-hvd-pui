<div class="title-page">

    <div class="logo">[logo]  </div>
    <div class="title-block">
        <h1 class="title"><%= record.identifier %></h1>
	<%
	   short_title = record.finding_aid.fetch('title',  record.display_string)
	   short_title = short_title.gsub(/\n.*/, ' ').strip
        %>
        <h1 class="title"><%= short_title %></h1>
    </div>



    <%= render(:partial => 'publication_statement', :locals => {
        :repository_name => record.resolved_repository['name'],
        :repository_information => record.repository_information
    })
    %>
</div>
